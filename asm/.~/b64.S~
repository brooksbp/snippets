.section .rodata

b64table:
        .byte 'A,'B,'C,'D,'E,'F,'G,'H
        .byte 'I,'J,'K,'L,'M,'N,'O,'P
        .byte 'Q,'R,'S,'T,'U,'V,'W,'X
        .byte 'Y,'Z,'a,'b,'c,'d,'e,'f
        .byte 'g,'h,'i,'j,'k,'l,'m,'n
        .byte 'o,'p,'q,'r,'s,'t,'u,'v
        .byte 'w,'x,'y,'z,'0,'1,'2,'3
        .byte '4,'5,'6,'7,'8,'9,'+,'/

formatStr:
        .ascii "Plain data: %s\nEncoded data: %s\n\0"

.section .bss

        .comm encodedData, 1024

.section .data

plainData:
        .ascii "Hello World!\0"
plainDataLen:
        .int 12

        
.section .text

.global main
main:
        movl $plainData, %esi
        movl $encodedData, %edi
        movl $b64table, %ebp

        movl $0, %ecx
